// Return true if the string in the first element of the array contains all of the letters of the string in the second element of the array.

// For example, ["hello", "Hello"], should return true because all of the letters in the second string are present in the first, ignoring case. The arguments ["hello", "hey"] should return false because the string "hello" does not contain a "y". Lastly, ["Alien", "line"], should return true because all of the letters in "line" are present in "Alien".

function mutation(arr) {

var counter = 0;

var first = arr[0].toLowerCase();

var second = arr[1].toLowerCase();
second = second.split("");

for (var i = 0; i < second.length; i++) {
	if (first.indexOf(second[i]) >= 0) {
		counter++;
	}

}
if (counter == second.length) {
	return true;
} else {
	return false;
}


}
mutation(["hello", "neo"]);
